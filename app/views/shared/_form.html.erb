<%= label_tag("post[title]", "Title:") %>
<%= text_field_tag("post[title]") %><br>
<%= label_tag("post[body]", "Body:") %>
  <%= text_field_tag("post[body]") %><br>
  <%= select_tag(
        "post[category_id]",
        options_for_select( @category_options, @post.category_id )
      ) %>
  <br>
  <%= submit_tag("Save Post") %>
<% end  %>
