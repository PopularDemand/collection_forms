<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<p><%= Category.find(@post.category_id).name %></p>

<ul>
  <% @post.tags.each do |tag| %>
    <li><%= tag.name %></li>
  <% end %>
</ul>

<% unless @post.comments.empty? %>
  <% @post.comments.each do |comment| %>
    <strong>Comment:</strong>
    <p><%= comment.body %></p>
  <% end %>
<% end %>



<%= link_to "Edit post", edit_post_path(@post) %>
